<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_main"
    tools:context=".MainActivityFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X ATAS"
        android:id="@+id/btnXAtas"
        android:onClick="onClickButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnYbawah"
        android:layout_toStartOf="@+id/btnYbawah" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X BAWAH"
        android:id="@+id/btnXbawah"
        android:onClick="onClickButton"
        android:layout_below="@+id/btnXAtas"
        android:layout_toLeftOf="@+id/btnYbawah"
        android:layout_toStartOf="@+id/btnYbawah" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y ATAS"
        android:id="@+id/btnYAtas"
        android:onClick="onClickButton"
        android:layout_above="@+id/btnXbawah"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y BAWAH"
        android:id="@+id/btnYbawah"
        android:onClick="onClickButton"
        android:layout_alignTop="@+id/btnXbawah"
        android:layout_toLeftOf="@+id/btnZAtas"
        android:layout_toStartOf="@+id/btnZAtas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z ATAS"
        android:id="@+id/btnZAtas"
        android:onClick="onClickButton"
        android:layout_alignBottom="@+id/btnYAtas"
        android:layout_toRightOf="@+id/btnYAtas"
        android:layout_toEndOf="@+id/btnYAtas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z BAWAH"
        android:id="@+id/btnZbawah"
        android:onClick="onClickButton"
        android:layout_alignBottom="@+id/btnYbawah"
        android:layout_alignLeft="@+id/btnZAtas"
        android:layout_alignStart="@+id/btnZAtas" />


</RelativeLayout>
